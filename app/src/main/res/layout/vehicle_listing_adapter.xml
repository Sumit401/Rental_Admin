<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10sp"
    android:layout_margin="10dp">

    <LinearLayout
        android:padding="5sp"
        android:id="@+id/layoutinfo_veh_listing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textColor="@color/black"
                android:id="@+id/veh_brand"
                android:gravity="center_horizontal|center_vertical"
                android:textStyle="bold"
                android:textSize="18sp"
                android:padding="5sp"
                android:layout_weight="1"
                android:text="Vehicle Brand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageButton
                android:id="@+id/delete_vehicle"
                android:tooltipText="Delete"
                android:layout_marginEnd="20sp"
                android:padding="10sp"
                android:tintMode="add"
                android:src="@drawable/ic_delete_black_24dp"
                android:background="@color/white"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:targetApi="o"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false">

            <LinearLayout
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:baselineAlignBottom="true"
                    android:cropToPadding="true"
                    android:padding="5sp"
                    android:id="@+id/vehimg"
                    android:src="@mipmap/ic_launcher_round"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

            <LinearLayout
                android:padding="10sp"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_gravity="center"
                        android:layout_marginEnd="5sp"
                        android:drawableStart="@drawable/ic_airline_seat_recline_normal_black_24dp"
                        android:drawablePadding="10sp"
                        android:gravity="center_vertical"
                        android:id="@+id/seating"
                        android:textSize="12sp"
                        android:padding="5sp"
                        android:layout_weight="1"
                        android:text="Seating"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_gravity="center"
                        android:layout_marginEnd="5sp"
                        android:padding="5sp"
                        android:drawableLeft="@drawable/ic_date_range_black_24dp"
                        android:gravity="center_vertical"
                        android:drawablePadding="10sp"
                        android:id="@+id/model"
                        android:textSize="12sp"
                        android:layout_weight="1"
                        android:text="Model"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_gravity="center"
                        android:padding="5sp"
                        android:drawablePadding="10sp"
                        android:layout_marginEnd="5sp"
                        android:drawableLeft="@drawable/ic_battery_60_black_24dp"
                        android:gravity="center_vertical"
                        android:id="@+id/fuel"
                        android:textSize="12sp"
                        android:layout_weight="1"
                        android:text="Fuel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_gravity="center"
                        android:layout_marginEnd="5sp"
                        android:drawableStart="@drawable/ic_location_city_black_24dp"
                        android:drawablePadding="10sp"
                        android:gravity="center_vertical"
                        android:id="@+id/veh_city"
                        android:textSize="12sp"
                        android:padding="5sp"
                        android:layout_weight="1"
                        android:text="City"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_gravity="center"
                        android:padding="5sp"
                        android:drawablePadding="10sp"
                        android:layout_marginEnd="5sp"
                        android:drawableLeft="@drawable/ic_attach_money_black_24dp"
                        android:gravity="center_vertical"
                        android:id="@+id/pricing"
                        android:textSize="12sp"
                        android:layout_weight="1"
                        android:text="Price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="fill"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black"
                android:id="@+id/overview"
                android:textSize="12sp"
                android:layout_weight="1"
                android:text="Vehicle Overview"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>